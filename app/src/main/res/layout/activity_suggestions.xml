<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Services.Suggestions">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/layout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#1E90FF"
                android:padding="30dp">

                <TextView
                    android:id="@+id/suggestionFormTitle1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="@string/send_us_your_suggestion_title"
                    android:textColor="@color/white"
                    android:textSize="25sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/suggestionFormTitle2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/suggestionFormTitle1"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="15dp"
                    android:gravity="center_horizontal"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    tools:text="Send us your suggestion !" />
            </RelativeLayout>

            <LinearLayout
                android:layout_below="@+id/layout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="17dp"
                    android:lines="1"
                    android:maxLines="1"
                    android:minLines="1"
                    android:hint="@string/enter_name"
                    android:inputType="textPersonName"/>

                <EditText
                    android:id="@+id/emailSubject"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="17dp"
                    android:lines="1"
                    android:maxLines="4"
                    android:minLines="1"
                    android:autofillHints="Feedback of Covid Update application"
                    android:hint="@string/subject"
                    android:inputType="textEmailSubject"/>

                <EditText
                    android:id="@+id/emailMessage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="17dp"
                    android:lines="1"
                    android:maxLines="10"
                    android:minLines="1"
                    android:scrollbars="vertical"
                    android:hint="@string/compose_message"/>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <RelativeLayout
                    android:id="@+id/sendSuggestionButon"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="80dp"
                    android:layout_marginTop="50dp"
                    android:layout_marginRight="80dp"
                    android:layout_marginBottom="30dp"
                    android:clickable="true"
                    android:background="@drawable/card_design_2"
                    android:elevation="5dp"
                    android:focusable="true">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:gravity="center"
                        android:padding="10dp"
                        android:text="@string/send_button"
                        android:textColor="@color/white"
                        android:textSize="22sp"
                        android:textStyle="bold" />

                </RelativeLayout>

                </RelativeLayout>


            </LinearLayout>

        </RelativeLayout>

    </ScrollView>



</RelativeLayout>











