<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Services.Helpline">

    <RelativeLayout
        android:id="@+id/helplineheading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/centralHelpline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="17dp"
            android:layout_centerHorizontal="true"
            android:fontFamily="sans-serif-black"
            android:gravity="center_horizontal"
            android:text="Central Helpline Number"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/helplineNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/centralHelpline"
            android:layout_centerHorizontal="true"
            android:fontFamily="sans-serif-black"
            android:gravity="center_horizontal"
            android:text="( +91-11-23978046 )"
            android:textColor="@color/red"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/helplineWeb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/helplineNum"
            android:layout_centerHorizontal="true"
            android:fontFamily="sans-serif-black"
            android:gravity="center_horizontal"
            android:text="ncov2019@gov.in"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/helplineMail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/helplineWeb"
            android:layout_centerHorizontal="true"
            android:fontFamily="sans-serif-black"
            android:gravity="center_horizontal"
            android:paddingBottom="17dp"
            android:text="ncov2019@gmail.com"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_below="@+id/helplineMail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:background="#D8D8D8">

            <TextView
                android:id="@+id/sr_no"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:padding="4dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:text="No" />

            <TextView
                android:id="@+id/state_name"
                android:layout_width="227dp"
                android:layout_height="match_parent"
                android:gravity="start"
                android:padding="4dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:text="Name of State" />

            <TextView
                android:id="@+id/helpline_number"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="start"
                android:padding="4dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:text="Helpline" />

        </LinearLayout>

    </RelativeLayout>












    <ListView
        android:id="@+id/helplineListView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/helplineheading" />

</RelativeLayout>