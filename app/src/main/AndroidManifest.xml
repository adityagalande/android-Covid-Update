    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.CovidUpdate">

        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="ca-app-pub-9365499454983010~7490206469"/>

        <activity
            android:name=".SplashScreen"
            android:screenOrientation="portrait">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>

        <activity
            android:name=".DetailCustomLayout"
            android:screenOrientation="portrait" />

        <activity
            android:name=".Services.AmericaCases"
            android:screenOrientation="portrait" />

        <activity
            android:name=".Services.IndiaCases"
            android:screenOrientation="portrait" />

        <activity
            android:name=".Services.WorldWideCases"
            android:screenOrientation="portrait" />

        <activity
            android:name=".Services.Disclaimer"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Services.AboutUs"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Services.Suggestions"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Services.Precautions"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Services.MaskTips"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Services.Helpline"
            android:screenOrientation="portrait" />
        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait">

        </activity>
    </application>

</manifest>