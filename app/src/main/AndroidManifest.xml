<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.daily_cases_update.android">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.CovidUpdate">

        <activity android:name="com.daily_cases_update.android.DetailCustomUsaLayout"
            android:screenOrientation="portrait" />

        <activity
            android:name="com.daily_cases_update.android.DetailCustomIndiaLayout"
            android:screenOrientation="portrait" />

        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="ca-app-pub-9365499454983010~3455887831" />

        <activity
            android:name="com.daily_cases_update.android.SplashScreen"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.daily_cases_update.android.DetailCustomLayout"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.daily_cases_update.android.Services.AmericaCases"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.daily_cases_update.android.Services.IndiaCases"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.daily_cases_update.android.Services.WorldWideCases"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.daily_cases_update.android.Services.Advisory"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.daily_cases_update.android.Services.AboutUs"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.daily_cases_update.android.Services.Suggestions"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.daily_cases_update.android.Services.Precautions"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.daily_cases_update.android.Services.MaskTips"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.daily_cases_update.android.Services.Helpline"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.daily_cases_update.android.MainActivity"
            android:screenOrientation="portrait" />
    </application>

</manifest>